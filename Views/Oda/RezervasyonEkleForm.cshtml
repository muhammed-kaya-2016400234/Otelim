@{

    ViewBag.Title = "Reservation";
    int? ks = ViewBag.kisiSayı;
    string gt = ViewBag.gt;
    string ct = ViewBag.ct;
    string oteladı = ViewBag.oteladı;
    Oda o = ViewBag.oda;
}
@using Mvc_Otelim.Models;
<div class="row">

    <div class="col-md-3"></div>
    <div class="col-md-6">


        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Rezervasyon Yap
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form role="form" id="registrationForm-1" action="@Url.Action("RezervasyonEkle","Oda")" method="post">
                        <div class="form-group">

                            <input type="hidden" name="odaID" value="@o.ID" />

                            <label for="otel">
                                Otel
                            </label>
                            <input id="otel" type="text" class="form-control" value="@oteladı" readonly />
                            <label for="oda">
                                Oda Adı
                            </label>
                            <input id="oda" type="text" class="form-control" value="@o.name" readonly />

                            <label for="inp3">
                                Kişi Sayısı
                            </label>
                            <input type="number" min="1" max="@o.Kapasite" value="@ks" name="KişiSayısı" class="form-control " id="inp3" placeholder="Kişi Sayısı  Giriniz">
                            <label for="from">
                                Giriş Tarihi
                            </label>
                            <input autocomplete="off" type="text" name="giris" value="@gt" class="form-control tarih" id="from" placeholder="Giriş Tarihi Giriniz">
                            <label for="to">
                                Çıkış Tarihi
                            </label>
                            <input autocomplete="off" type="text" name="cıkıs" value="@ct" class="form-control tarih" id="to" placeholder="Çıkış Tarihi Giriniz">
                            @if (Session["tfail"] != null)
                            {
                                <p style="color:red">@Convert.ToString(Session["tfail"])</p>
                            }

                        </div>

                        <button type="submit" class="btn btn-primary">Rezervasyon Yap</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


