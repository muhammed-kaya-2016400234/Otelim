@{
    
    ViewBag.Title = "Arama Sonuçları";
    
}

@using Mvc_Otelim.Models;
@model Dictionary<Otel,string>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    
                  <h1> @ViewBag.Sehir şehrindeki oteller </h1>
                 
                </div>
               <div class="block-controls">
                    <a href="/Home/Index">   <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span> </a>
                      <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                
                                <th>Otel Adı</th>
                                <th>Oda Sayısı</th>
                                <th>Yıldız Sayısı</th>
                                <th>Puan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Otel k in Model.Keys)
                            {
                                <tr>
                                    <td><a href="/Otel/Görüntüle/@k.ID/@ViewBag.kisiSayısı/@ViewBag.giriş/@ViewBag.çıkış"><img src="@Model[k]" width="90" height="90" /></a></td>
                                   
                                    <td>
                                        <a href="/Otel/Görüntüle/@k.ID/@ViewBag.kisiSayısı/@ViewBag.giriş/@ViewBag.çıkış" type="button" class="btn btn-info "  >@k.OtelAdı </a>

                                    </td>
                                    <td>@k.OdaSayısı</td>
                                    <td>@k.YıldızSayısı</td>
                                    <td>@k.Puan</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
 
<script>
    $(".detay").click(function () {
        var id = $(this).data("id");

        //alert("Tamam'a basıldı");
        $.ajax({
            type: "POST",
            url: "/Otel/Görüntüle/" + id,
            success: 
                window.location.replace("/Otel/Görüntüle")

        });
    });
    </script>