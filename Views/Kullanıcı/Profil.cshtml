@{
    ViewBag.Title = "Profile";
    Kullanıcı oy = ViewBag.k;

}
@using Mvc_Otelim.Models;

<div class="col-md-3"></div>
<div class="col-md-6">
    <div class="block">
        <div class="block-heading" style="font-size:larger;color:red">
            Update Information
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <form role="form" class="registration-form form-horizontal bv-form" method="post" action="@Url.Action("ProfilGüncelle","Kullanıcı")" novalidate="novalidate">
                    <button type="submit" class="bv-hidden-submit" style="display: none; width: 0px; height: 0px;"></button>
                    <div class="form-group has-feedback">
                        <label for="inputID" class="col-sm-3 control-label">User ID</label>
                        <div class="col-sm-9">
                            <input readonly autocomplete="on" class="form-control" id="inputID" placeholder="User ID" type="text" value="@oy.ID" name="ID" data-bv-field="ID"><i class="form-control-feedback" data-bv-icon-for="ID" style="display: none;"></i>

                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label for="inputName" class="col-sm-3 control-label">Name</label>
                        <div class="col-sm-9">
                            <input autocomplete="on" class="form-control" id="inputName" placeholder="Name" type="text" name="Ad" value="@oy.Ad" data-bv-field="name"><i class="form-control-feedback" data-bv-icon-for="name" style="display: none;"></i>

                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="name" data-bv-result="NOT_VALIDATED" style="display: none;">The room name is required and cannot be empty</small>

                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label for="inputSName" class="col-sm-3 control-label">Surname</label>
                        <div class="col-sm-9">
                            <input autocomplete="on" class="form-control" id="inputSName" placeholder="Surname" type="text" name="Soyad" value="@oy.Soyad" data-bv-field="name"><i class="form-control-feedback" data-bv-icon-for="name" style="display: none;"></i>

                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="name" data-bv-result="NOT_VALIDATED" style="display: none;">The room name is required and cannot be empty</small>

                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label for="inputEmail" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-9">
                            <input autocomplete="off" class="form-control" id="inputEmail" placeholder="Email" type="email" value="@oy.Mail" name="email" data-bv-field="email"><i class="form-control-feedback" data-bv-icon-for="email" style="display: none;"></i>
                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="email" data-bv-result="NOT_VALIDATED" style="display: none;">'EMail' alanı boş bırakılamaz.</small><small class="help-block" data-bv-validator="emailAddress" data-bv-for="email" data-bv-result="NOT_VALIDATED" style="display: none;">The email address is not a valid</small>
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label for="inputPassword" class="col-sm-3 control-label">Password</label>
                        <div class="col-sm-9">
                            <input autocomplete="off" class="form-control" id="inputPassword" placeholder="Şifre" value="@oy.Sifre" type="password" name="password" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="password" style="display: none;"></i>
                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="password" data-bv-result="NOT_VALIDATED" style="display: none;">'Şifre' alanı boş bırakılamaz.</small><small class="help-block" data-bv-validator="stringLength" data-bv-for="password" data-bv-result="NOT_VALIDATED" style="display: none;">The password must be between 8 and 30 characters long</small>
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label for="inputPasswordConfirm" class="col-sm-3 control-label">Confirm Password</label>
                        <div class="col-sm-9">
                            <input autocomplete="off" class="form-control" id="inputPasswordConfirm" placeholder="Confirm Password" value="@oy.Sifre" type="password" name="passwordConfirm" data-bv-field="passwordConfirm"><i class="form-control-feedback" data-bv-icon-for="passwordConfirm" style="display: none;"></i>
                            <small class="help-block" data-bv-validator="identical" data-bv-for="passwordConfirm" data-bv-result="NOT_VALIDATED" style="display: none;">The password and its confirm are not the same</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-success">Submit</button>

                        </div>
                    </div>
                </form>

            </div>



        </div>
    </div>
</div>

