@{
    ViewBag.Title = "Manager Profile";
    OtelYöneticisi oy = ViewBag.oy;
}
@using Mvc_Otelim.Models;

@model Otel

    <div class="row">
                
                <div class="col-md-12">
                    <div class="block">
                        <div class="block-heading">
                            <h3>Profile</h3>
                        </div>
                        <div class="block-content-outer">
                            <div class="block-content-inner">





                                <div id="order-view-content" class="table-responsive">
                                    <ul id="order-view-tabs" class="nav nav-tabs tabs-left">
                                        <li class="active"><a href="#order-view-tabs-order-details" data-toggle="tab">Hotel</a></li>
                                        <li><a href="#order-view-tabs-payment" data-toggle="tab">Manager</a></li>
                                       
                                    </ul>
                                    <div class="tab-content">
                                        <div id="order-view-tabs-order-details" class="tab-pane active">
                                            <div class="col-md-9">
                                                <form role="form" class="login-form form-horizontal bv-form" method="post" action="@Url.Action("OtelGüncelle","OtelYöneticisi")" novalidate="novalidate">
                                                    <button type="submit" class="bv-hidden-submit" style="display: none; width: 0px; height: 0px;"></button>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputID" class="col-sm-3 control-label">Hotel ID</label>
                                                        <div class="col-sm-9">
                                                            <input readonly autocomplete="on" class="form-control" id="inputID" placeholder="Hotel ID" type="text" value="@Model.ID" name="ID" data-bv-field="ID"><i class="form-control-feedback" data-bv-icon-for="ID" style="display: none;"></i>

                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputName" class="col-sm-3 control-label">Hotel Name</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="on" class="form-control" id="inputName" placeholder="Hotel Name" type="text" name="OtelAdı" value="@Model.OtelAdı" data-bv-field="name"><i class="form-control-feedback" data-bv-icon-for="name" style="display: none;"></i>

                                                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="name" data-bv-result="NOT_VALIDATED" style="display: none;">The room name is required and cannot be empty</small>

                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputRoomType" class="col-sm-3 control-label">Hotel Type</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="on" class="form-control" id="inputRoomType" placeholder="Hotel Type" type="text" value="@Model.OtelTürüID" name="OdaTürüID" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="rtype" style="display: none;"></i>

                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputCap" class="col-sm-3 control-label">Number of Stars</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="on" class="form-control" id="inputCap" placeholder="Number of Stars" type="text" value="@Model.YıldızSayısı" name="YıldızSayısı" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="cap" style="display: none;"></i>

                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-sm-offset-3 col-sm-9">
                                                            <button type="submit" class="btn btn-success">Submit</button>

                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                                <table class="table table-striped table-hover"> </table>
                                        </div>
                                        <div class="tab-pane" id="order-view-tabs-payment">
                                            <div class="col-md-9">
                                                <form role="form" class="registration-form form-horizontal bv-form" method="post" action="@Url.Action("YöneticiGüncelle","OtelYöneticisi")" novalidate="novalidate">
                                                    <button type="submit" class="bv-hidden-submit" style="display: none; width: 0px; height: 0px;"></button>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputID" class="col-sm-3 control-label">Manager ID</label>
                                                        <div class="col-sm-9">
                                                            <input readonly autocomplete="on" class="form-control" id="inputID" placeholder="Manager ID" type="text" value="@oy.ID" name="ID" data-bv-field="ID"><i class="form-control-feedback" data-bv-icon-for="ID" style="display: none;"></i>

                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputName" class="col-sm-3 control-label">Manager Name</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="on" class="form-control" id="inputName" placeholder="Manager Name" type="text" name="Ad" value="@oy.Ad" data-bv-field="name"><i class="form-control-feedback" data-bv-icon-for="name" style="display: none;"></i>

                                                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="name" data-bv-result="NOT_VALIDATED" style="display: none;">The room name is required and cannot be empty</small>

                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputName" class="col-sm-3 control-label">Manager Surname</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="on" class="form-control" id="inputName" placeholder="Manager surname" type="text" name="Soyad" value="@oy.Soyad" data-bv-field="name"><i class="form-control-feedback" data-bv-icon-for="name" style="display: none;"></i>

                                                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="name" data-bv-result="NOT_VALIDATED" style="display: none;">The room name is required and cannot be empty</small>

                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputEmail" class="col-sm-3 control-label">Email</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="off" class="form-control" id="inputEmail" placeholder="Email" type="email" value="@oy.Mail" name="email" data-bv-field="email"><i class="form-control-feedback" data-bv-icon-for="email" style="display: none;"></i>
                                                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="email" data-bv-result="NOT_VALIDATED" style="display: none;">'EMail' alanı boş bırakılamaz.</small><small class="help-block" data-bv-validator="emailAddress" data-bv-for="email" data-bv-result="NOT_VALIDATED" style="display: none;">The email address is not a valid</small>
                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputPassword" class="col-sm-3 control-label">Password</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="off" class="form-control" id="inputPassword" placeholder="Şifre" value="@oy.Şifre" type="password" name="password" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="password" style="display: none;"></i>
                                                            <small class="help-block" data-bv-validator="notEmpty" data-bv-for="password" data-bv-result="NOT_VALIDATED" style="display: none;">'Şifre' alanı boş bırakılamaz.</small><small class="help-block" data-bv-validator="stringLength" data-bv-for="password" data-bv-result="NOT_VALIDATED" style="display: none;">The password must be between 8 and 30 characters long</small>
                                                        </div>
                                                    </div>
                                                    <div class="form-group has-feedback">
                                                        <label for="inputPasswordConfirm" class="col-sm-3 control-label">Confirm Password</label>
                                                        <div class="col-sm-9">
                                                            <input autocomplete="off" class="form-control" id="inputPasswordConfirm" placeholder="Confirm Password" value="@oy.Şifre" type="password" name="passwordConfirm" data-bv-field="passwordConfirm"><i class="form-control-feedback" data-bv-icon-for="passwordConfirm" style="display: none;"></i>
                                                            <small class="help-block" data-bv-validator="identical" data-bv-for="passwordConfirm" data-bv-result="NOT_VALIDATED" style="display: none;">The password and its confirm are not the same</small>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-sm-offset-3 col-sm-9">
                                                            <button type="submit" class="btn btn-success">Submit</button>

                                                        </div>
                                                    </div>
                                                </form>

                                            </div>
                                            <table class="table table-striped table-hover"> </table>
                                        </div>

                                        </div>
                                </div>

















                              

                            </div>



                        </div>
                    </div>
                </div>
         

            </div>
    
        
       
