@{
    Otel o = ViewBag.otel;
    OtelYöneticisi y = new OtelYöneticisi();
    if (ViewBag.yonetici != null) { y = ViewBag.yonetici; }
    ViewBag.Title = "Update Hotel Information";

}
@using Mvc_Otelim.Models;
    <form role="form" class="login-form form-horizontal bv-form" method="post" action="OtelGüncelle" novalidate="novalidate">
        <button type="submit" class="bv-hidden-submit" style="display: none; width: 0px; height: 0px;"></button>
        <input type="hidden" name="otelid" value="@o.ID" />
        @{
            if (y != null)
            {
                <input type="hidden" name="yid" value="@y.ID" />
            }
        }

        <div class="form-group has-feedback">
            <label for="inputName" class="col-sm-3 control-label">Hotel Name</label>
            <div class="col-sm-9">
                <input autocomplete="on" class="form-control" id="inputName" value="@o.OtelAdı" placeholder="Hotel Name" type="text" name="name" data-bv-field="name"><i class="form-control-feedback" data-bv-icon-for="name" style="display: none;"></i>

                <small class="help-block" data-bv-validator="notEmpty" data-bv-for="name" data-bv-result="NOT_VALIDATED" style="display: none;">The room name is required and cannot be empty</small>

            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="inputRoomType" class="col-sm-3 control-label">Hotel Type</label>
            <div class="col-sm-9">
                <input autocomplete="on" class="form-control" id="inputRoomType" placeholder="Hotel Type" type="text" value="@o.OtelTürüID" name="htype" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="rtype" style="display: none;"></i>

            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="inputCap" class="col-sm-3 control-label">Number of Stars</label>
            <div class="col-sm-9">
                <input autocomplete="on" class="form-control" id="inputCap" placeholder="Number of Stars" type="text" value="@o.YıldızSayısı" name="stars" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="cap" style="display: none;"></i>

            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="inputCap" class="col-sm-3 control-label">City</label>
            <div class="col-sm-9">
                <input autocomplete="on" class="form-control" id="inputCap" placeholder="City" type="text" name="city" value="@o.Şehir" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="cap" style="display: none;"></i>

            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="inputCap" class="col-sm-3 control-label">Manager Mail</label>
            <div class="col-sm-9">
                <input autocomplete="on" class="form-control" id="inputCap" placeholder="Manager Mail" type="text" name="YMail" value="@y.Mail" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="cap" style="display: none;"></i>

            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="inputCap" class="col-sm-3 control-label">Manager Name</label>
            <div class="col-sm-9">
                <input autocomplete="on" class="form-control" id="inputCap" placeholder="Manager Name" type="text" name="ad" value="@y.Ad" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="cap" style="display: none;"></i>

            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="inputCap" class="col-sm-3 control-label">Manager Surname</label>
            <div class="col-sm-9">
                <input autocomplete="on" class="form-control" id="inputCap" placeholder="Manager surname" type="text" name="soyad" value="@y.Soyad" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="cap" style="display: none;"></i>

            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-success">Submit</button>

            </div>
        </div>
    </form>
